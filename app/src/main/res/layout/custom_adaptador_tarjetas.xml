<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/contenedorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/border_mazos_ui">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iVTarjeta"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:contentDescription=""
                android:scaleType="centerCrop"
                android:src="@drawable/imageprueba" />

            <TextView
                android:id="@+id/txtPreguntaTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="txtPreguntaTarjeta"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="18sp" />

            <!--<TextView
                android:id="@+id/txtRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="respuesta"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary" />-->

        </LinearLayout>

    </LinearLayout>


</LinearLayout>