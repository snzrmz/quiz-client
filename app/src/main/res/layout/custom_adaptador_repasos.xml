<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contenedorView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/lLRepaso"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aciertos:"
                android:textAppearance="?attr/textAppearanceHeadline3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtAcertadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="txtAcertadas"
                android:textAppearance="?attr/textAppearanceHeadline2"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fallos:"
                android:textAppearance="?attr/textAppearanceHeadline3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtFalladas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="txtFalladas"
                android:textAppearance="?attr/textAppearanceHeadline2"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtFechaHoraInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="txtFechaHoraInicio"

            android:textAlignment="textEnd"
            android:visibility="visible" />


    </LinearLayout>

</androidx.cardview.widget.CardView>